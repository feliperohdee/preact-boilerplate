<% const isAsync = file => file.match(/\d+\.\w*\.(js|css)/g) !== null; %>
<% const env = htmlWebpackPlugin.options.env; %>
<% const title = htmlWebpackPlugin.options.title; %>
<% const files = htmlWebpackPlugin.files; %>
<% const asyncFiles = _.flatMap(webpack.chunks, chunk => _.filter(chunk.files, isAsync)); %>
<% const static = PRODUCTION ? '/' : '/'; %>
<!DOCTYPE html>
<html>
	<head>
		<base href="/">
		<meta charset="UTF-8">
		<title><%= title %></title>
		<link rel="shortcut icon" href="<%= static %>assets/favicon.ico"/>
		<% _.forEach(asyncFiles, file => { %>
			<link rel="preload" href="<%= static + file %>" as="<%= file.match(/\.css$/) ? 'style' : 'script' %>">
		<% }) %>
		<% !env.inlineCss && _.forEach(files.css, file => { %>
			<link rel="stylesheet" href="<%= static + file %>">
		<% })%>
	</head>
	<body>
		<div></div>
		<noscript>
			<div style="text-align: center;font-family:monospace;padding:10px;font-size:16px">
				<h1>Too Bad!</h1>
				<p>
					Please enable Javascript.
				</p>
			</div>
		</noscript>
		<% _.forEach(files.js, file => { %>
			<% if(_.includes(file, 'polyfills')) { %>
				<script>window.fetch || document.write('<script src="<%= static + file %>"><\/script>')</script>
			<% } else { %>
				<script defer src="<%= static + file %>"></script>
			<% } %>
		<% })%>
	</body>
</html>
